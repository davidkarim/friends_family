<!DOCTYPE html>
<html>
<head>
  <title>FriendsFamily</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Tangerine">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

</head>
<body>
  <div class ="container center_div"></div>

  <!-- <div class="socialicons">
    <i class="fa fa-instagram"></i>
    <i class="fa fa-facebook-square"></i>
    <i class="fa fa-twitter"></i>
  </div> -->

  <ul class="nav nav-tabs">
    <li role="presentation"><a href="/">Home</a></li>
    <li role="presentation"><a href="/trucks">Find</a></li>
    <% if !logged_in? %>
      <li role="presentation"><%= link_to "Signup", signup_path %></li>
    <% end %>
    <% if logged_in? %>
      <li role="presentation"><%= link_to "Account", truck_owner_path(session[:user_id]) %></li>
      <li role="presentation"><%= link_to "Logout", logout_path %></li>
    <% else %>
      <li role="presentation"><%= link_to "Login", login_path %></li>
    <% end %>
  </ul>


    <div class="container">
      <% flash.each do |message_type, message| %>
      <div class="alert alert-<%=message_type %>">
        <%= message %>
      </div>
      <% end %>
    </div>


<%= yield %>
<%# debug(params) if Rails.env.development? %>

</body>
</html>
