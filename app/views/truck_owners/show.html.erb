<p id="notice"><%= notice %></p>

<H1>
  <%= @truck_owner.name %>
</H1>

<H3>
  <%= @truck_owner.email %>
</H3>

<h1>Listing Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Web url</th>
      <th>Phone number</th>
      <th>Claimed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.name %></td>
        <td><%= truck.web_url %></td>
        <td><%= truck.phone_number %></td>
        <td><%= truck.claimed %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_truck_owner_path(@truck_owner) %> |
<%= link_to 'Back', truck_owners_path %>
